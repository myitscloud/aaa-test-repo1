# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown - preserve trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML/CSS
[*.{html,htm,css,scss,less}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# PowerShell
[*.{ps1,psm1,psd1}]
indent_size = 4
charset = utf-8-bom

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Ruby
[*.rb]
indent_size = 2

# XML
[*.xml]
indent_size = 2

# Makefile - requires tabs
[Makefile]
indent_style = tab

# Git config
[.git*]
indent_size = 4

# Docker
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# Terraform
[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2
